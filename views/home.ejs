<% layout('layouts/boilerplate') %>

<!-- Hero Section -->
<div class="bg-primary text-white text-center py-5 mb-5" style="background: linear-gradient(to right, #4e54c8, #8f94fb);">
  <div class="container">
    <h1 class="display-4 fw-bold">Welcome to BookVerse</h1>
    <p class="lead">Discover, Review, and Share your favorite books</p>
    <a href="/books" class="btn btn-light btn-lg mt-3">Browse Books</a>
  </div>
</div>

<!-- Featured Section -->
<div class="container mb-5">
  <div class="row text-center">
    <div class="col-md-4 mb-4">
      <div class="card shadow-sm h-100">
        <div class="card-body">
          <i class="bi bi-book-half display-4 text-primary mb-3"></i>
          <h5 class="card-title fw-bold">Explore Books</h5>
          <p class="card-text">Find books across genres and authors with detailed descriptions.</p>
        </div>
      </div>
    </div>
    <div class="col-md-4 mb-4">
      <div class="card shadow-sm h-100">
        <div class="card-body">
          <i class="bi bi-pencil-square display-4 text-success mb-3"></i>
          <h5 class="card-title fw-bold">Write Reviews</h5>
          <p class="card-text">Share your thoughts, rate books, and help the community discover great reads.</p>
        </div>
      </div>
    </div>
    <div class="col-md-4 mb-4">
      <div class="card shadow-sm h-100">
        <div class="card-body">
          <i class="bi bi-people-fill display-4 text-warning mb-3"></i>
          <h5 class="card-title fw-bold">Connect Readers</h5>
          <p class="card-text">Engage with other book lovers and see what they are reading and reviewing..</p>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Call to Action -->
<div class=" py-5">
  <div class="container text-center">
  <h2 class="fw-bold mb-3 text-adaptive">
    Start Your Reading Journey Today!
  </h2>
    <a href="/books/new" class="btn btn-primary btn-lg">Add a New Book</a>
  </div>
</div>
