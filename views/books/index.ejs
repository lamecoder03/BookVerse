<% layout('layouts/boilerplate') %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="fw-bold text-primary">All Books</h1>
  <a href="/books/new" class="btn btn-success">Add a New Book</a>
  
</div>

<div class="row g-4">
  <% for(let book of books) { %>
    <div class="col-md-6 col-lg-4">
      <div class="card h-100 shadow-sm">
        <img src="<%= book.images[0].url %>" class="card-img-top" alt="<%= book.title %>">

        <div class="card-body d-flex flex-column">
          <h5 class="card-title"><%= book.title %></h5>
          <p class="card-text  mb-1">By <%= book.writer %></p>
          <p class="card-text"><small class=""><%= book.genre %></small></p>
          <a href="/books/<%= book._id %>" class="btn btn-primary mt-auto">View Details</a>
        </div>
      </div>
    </div>
  <% } %>
</div>
